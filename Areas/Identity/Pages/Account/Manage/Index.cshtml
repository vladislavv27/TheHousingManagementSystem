@page
@model VmihailovUi.Models.IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = "Index";
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="HouseId" class="form-control" placeholder="House ID" />
                <label asp-for="HouseId" class="form-label">House ID</label>
                <span asp-validation-for="HouseId" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ApartmentId" class="form-control" placeholder="Apartment ID" />
                <label asp-for="ApartmentId" class="form-label">Apartment ID</label>
                <span asp-validation-for="ApartmentId" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ResidentId" class="form-control" placeholder="Resident ID" />
                <label asp-for="ResidentId" class="form-label">Resident ID</label>
                <span asp-validation-for="ResidentId" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}